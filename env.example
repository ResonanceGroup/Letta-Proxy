# Letta Proxy Environment Variables
# Copy this file to .env and fill in your actual values

# Letta Server Configuration
# For Letta Cloud, use your Letta server URL
LETTA_BASE_URL=https://your-letta-server.com

# Letta API Key
# Required for authentication with Letta Cloud
LETTA_API_KEY=your_letta_api_key_here

# Letta Project Name
# Optional - defaults to "default-project"
LETTA_PROJECT=your-project-name

# System Prompt Control
# Set to 'true' to omit system prompts from data sent to Letta agent
# Optional - defaults to "false"
# REMOVE_SYSTEM_PROMPT=false